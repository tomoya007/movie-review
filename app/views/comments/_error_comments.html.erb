<div class="form-error">
  <% if object.errors.any? %>
    <div id="error_explanation"> 
      <div class="alert alert-danger">
        <%= object.errors.count %>つのエラーがあります
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>