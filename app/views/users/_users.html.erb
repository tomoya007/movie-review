<div class="container-fluid area-width search-page"> 
  <% @users.each do |user| %>
    <div class="card" style="margin-bottom: 15px;">
      <div class="avatar">
        <%= link_to "/users/#{user["id"]}", :target => "new" do %>
          <% if user.avatar? %>
            <%= image_tag avatar.url, class: "rounded-circle mx-auto d-block", size: "50x50" %>
          <% else %>
            <%= image_tag ("default-avatar.png"), class: "rounded-circle mx-auto d-block", size: "50x50" %>
          <% end %>
          <p class="name"><%= user.name %></p>
        <% end %>
      </div>
    </div>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
