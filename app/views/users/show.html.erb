<div class="container-fluid area-width user">
  <div class="row">

    <div class="col-lg-9" style="padding-left:0;padding-right:40px;">


      <%
=begin%>
 <h2>コメント</h2>
      <% @comments.each do |comment|%>
        <div class=card>
          <p>評価 :<%= comment.raty %>点</p>
          <div id="star-rate<%= comment.id %>"></div>    
          <script>
            $('#star-rate<%= comment.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              readOnly: true,  <!-- 星を読み取り専用にしていじれないようにする -->
              score: <%= comment.raty %>,
            });
          </script>
          <p>内容:<%= comment.content %></p>
        </div>
      <% end %>
    </div> 
<%
=end%>
    

    <h2>コメント</h2>
      <% @comments.each do |comment| %>
    

        <div class="comment row">
          <div class="col-lg-10 col-lg-9">
            <span class="info"><%= link_to comment.movie.title, comment.movie, :target => "new" %></span>
            
            <span class="date"><%= comment.created_at.to_s[0..15] %></span>
            <span class="raty"> 
              <div id="star-rate<%= comment.id %>"></div>    
              <script>
                $('#star-rate<%= comment.id%>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  readOnly: true,  <!-- 星を読み取り専用にしていじれないようにする -->
                  score: <%= comment.raty %>,
                });
              </script>
            </span>
            <span class="content"><%= comment.content %></span>
          </div>
          <div class="col-lg-2 col-lg-3">
            <%= link_to comment.movie, :target => "new" do %>
              <%= image_tag comment.movie.image.thumb.url %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-lg-3" style="padding:0;">
      <h1>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url, class: "rounded-circle", size: "100x100" %>
        <% else %>
          <%= image_tag ("default-avatar.png"), class: "rounded-circle", size: "100x100" %>
        <% end %>
        <%= @user.name %>
        <%= render 'relationships/follow_button', user: @user if user_signed_in? %>
      </h1>

      <div class="row text-center">
        <div class="stats col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
          <%= render 'devise/shared/stats' %>
        </div>
      </div>

      <div class="lists d-grid gap-2">
        <%= link_to "プロフィール", {}, :class => "btn btn-primary btn-block disabled" %>
        <%= link_to "観た映画のリスト", { :action => "watched" }, :class => "btn btn-outline-secondary btn-block" %>
        <%= link_to "観たい映画のリスト", { :action => "want" }, :class => "btn btn-outline-secondary btn-block" %>
      </div>
    </div>

  </div>
</div>




