<div class="container-fluid area-width search-page">
<h1>映画条件検索</h1>
<br>
<%= search_form_for @q, url: search_movies_path do |f| %>
<%= f.label :released_year, '公開年' %>
  <%= f.radio_button :released_year_lteq, '1979' %>~1979年
  <%= f.radio_button :released_year, '1980~1989' %>1980年~1989年
  <%= f.radio_button :released_year_gteq, '1990' %>1990年~
  <%= f.submit '検索' %>
<% end %>

