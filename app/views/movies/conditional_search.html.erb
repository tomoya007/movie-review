<div class="container-fluid area-width search-page"> 
  <h1>色々な検索</h1><br>
  <%= search_form_for @q, url: search_movies_path do |f| %>
    <h2><%= f.label :"ジャンル" %></h2>
    <br>
    <%= f.select :genres_name_eq, [["ドラマ", "ドラマ"], ["コメディ", "コメディ"], ["ロマンス", "ロマンス"], ["サスペンス", "サスペンス"], ["ファミリー", "ファミリー"], ["ファンタジー", "ファンタジー"], ["SF", "SF"]] ,{include_blank: '選択してください'}, :required => true, class:"form-control" %>
    <div class="input-group-btn">
      <%= button_tag(type: 'submit', class: "btn btn-sm btn-outline-secondary", style: "margin-top: 10px; border-radius: 5px;") do %>
        <i class="bi bi-search"></i> 検索
      <% end %>
    </div>
  <% end %>

  <%= search_form_for @q, url: search_movies_path do |f| %>
    <h2><%= f.label :"公開年" %></h2>
    <br>
    <%= f.select :released_year, [["~2009", "1990~2009"], ["2010~2019", "2010~2019"],["2020~", "2020~2030"]] ,{include_blank: '選択してください'}, :required => true, class:"form-control" %>
    <div class="input-group-btn">
      <%= button_tag(type: 'submit', class: "btn btn-sm btn-outline-secondary", style: "margin-top: 10px; border-radius: 5px;") do %>
        <i class="bi bi-search"></i> 検索
      <% end %>
    </div>
  <% end %>     

  <%= search_form_for @q, url: search_movies_path do |f| %>
    <h2><%= f.label :"今の気分" %></h2>
    <br>
    <%= f.select :feeling_eq, [["涙なしでは観れない", "涙なしでは観れない"], ["とにかく笑える！", "とにかく笑える！"], ["やっぱり家族っていいなあ", "やっぱり家族っていいなあ"], ["今日も1日おつかれさまの一本", "今日も1日おつかれさまの一本"], ["常識にとらわれない", "常識にとらわれない"]] ,{include_blank: '選択してください'}, :required => true, class:"form-control" %>
    <div class="input-group-btn">
      <%= button_tag(type: 'submit', class: "btn btn-sm btn-outline-secondary", style: "margin-top: 10px; border-radius: 5px;") do %>
        <i class="bi bi-search"></i> 検索
      <% end %>
    </div>
  <% end %>
</div>