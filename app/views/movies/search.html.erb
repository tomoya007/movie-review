<h1>検索結果</h1>
<%
=begin%>
 <table>
  <tbody>
    <% @results.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <%= image_tag movie.image.thumb.url %>
        <td><%= link_to '映画の詳細はこちら', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
<%
=end%>

<div class="container">
  <div class="row">
      <% @results.each do |movie| %>
      <div class="col-md-4 col-sm-6">
          <%= link_to "/movies/#{movie["id"]}", class: "link", :target => "new" do %>        

        <div style="text-align: center">
          <%= image_tag movie.image.url, :size => '212x300' %>
        </div>

          <h3><%= movie["title"] %></h3>
          
            <% end %>
      </div> 
      <% end %>
  </div> 
</div>
<%== pagy_bootstrap_nav(@pagy) %>