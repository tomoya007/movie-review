<h1>検索結果（<%= @count %>本）</h1>
<div class="container-fluid">
  <div class="row">
    <% @results.each do |movie| %>
      <div class="col-md-2 col-sm-4 poster" style="margin-bottom: 30px;">
        <%= link_to "/movies/#{movie["id"]}", :target => "new" do %>        
          <div style="text-align: center">
            <%= image_tag movie.image.url, :size => '212x300', class: "img_wrap" %>
          </div>
        <% end %>
      </div> 
    <% end %>
  </div> 
</div>
<%== pagy_bootstrap_nav(@pagy) %>
